{
  "name": "@sharmaz/mk-app",
  "version": "0.2.4",
  "type": "module",
  "description": "A quick way to start your web applications.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "build": "rollup --config",
    "cov:clean": "rimraf .nyc_output && rimraf coverage",
    "cov:unit": "NODE_OPTIONS=--experimental-vm-modules jest --forceExit --colors --detectOpenHandles -c jest.config.unit.js",
    "test:unit": "npm-run-all cov:clean cov:unit",
    "cov:e2e": "NODE_ENV=e2e NODE_OPTIONS=--experimental-vm-modules jest --forceExit --colors --detectOpenHandles --runInBand -c jest.config.e2e.js",
    "test:e2e": "NODE_ENV=e2e npm-run-all cov:clean cov:e2e"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sharmaz/mk-app.git"
  },
  "keywords": [
    "cli",
    "react",
    "javascript",
    "vanilla",
    "typescript",
    "farm",
    "vite",
    "webpack",
    "tailwindcss",
    "eslint",
    "oxlint",
    "jest",
    "react testing library",
    "app",
    "web"
  ],
  "bin": {
    "mk-app": "index.js"
  },
  "preferGlobal": true,
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "files": [
    "index.js",
    "templates/*",
    "dist"
  ],
  "author": "Ivan Robles <contact@ivanrobles.pro>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sharmaz/mk-app/issues"
  },
  "homepage": "https://github.com/Sharmaz/mk-app#readme",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "cli-prompts-test": "^0.3.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "execa": "^9.2.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^4.18.0",
    "rollup-plugin-esbuild": "^6.1.1"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "minimist": "^1.2.8",
    "prompts": "^2.4.2"
  }
}
